 http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

 <!--配置异常处理页面-->
 <error-page>
  <exception-type>com.neuedu.exception.BusinesseLoginException</exception-type>
  <location>/error.jsp</location>
 </error-page>


